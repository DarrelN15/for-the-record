<div class="container mt-3">
    <h2 class="text-center mb-4">Your Cart</h2>
    <!-- Cart Items Container -->
    <div id="cart-items-container" class="row justify-content-center"></div>
    <!-- Checkout Button -->
    <div class="d-flex justify-content-end mt-3">
      <a href="/checkout" class="btn btn-success btn-lg" role="button">Checkout</a>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const cartItemsContainer = document.getElementById('cart-items-container');
    
      let cart = JSON.parse(localStorage.getItem('cart')) || [];
    
      cart.forEach(function(item, index) {
        const cartItemHtml = `
          <div class="col-md-8 mb-4">
            <div class="card">
              <div class="row g-0">
                <div class="col-md-4">
                  <img src="${item.image}" class="img-fluid rounded-start" alt="Album Image">
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title">${item.title}</h5>
                    <p class="card-text">${item.artist}</p>
                    <p class="card-text"><small class="text-muted">Price: ${item.price}</small></p>
                    <button class="btn btn-danger remove-item-btn" data-index="${index}">Remove</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        `;
        cartItemsContainer.innerHTML += cartItemHtml;
      });
    
      // Add event listener for remove buttons after items are added
      document.querySelectorAll('.remove-item-btn').forEach(button => {
        button.addEventListener('click', function() {
          const itemIndex = this.getAttribute('data-index');
          cart.splice(itemIndex, 1); // Remove item from cart
          localStorage.setItem('cart', JSON.stringify(cart)); // Update local storage
          location.reload(); // Refresh page to reflect changes
        });
      });
    });
    </script>
    
